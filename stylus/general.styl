body
	font-size 14pt

header
	position fixed
	top 0
	left 0
	width 100%
	height 60px
	padding 0 40px
	z-index 5
	-webkit-transition background .09s ease-in-out
	-moz-transition background .09s ease-in-out
	-ms-transition background .09s ease-in-out
	-o-transition background .09s ease-in-out
	transition background .09s ease-in-out
	
	&.active
		background $white
		
		.logo
			height 30px
	
	.header-wrap
		position relative
		width 100%
		height 100%

	.logo
		display inline-block
		height 50px
		margin-top 15px
		-webkit-transition all .1s ease-in-out
		-moz-transition all .1s ease-in-out
		-ms-transition all .1s ease-in-out
		-o-transition all .1s ease-in-out
		transition all .1s ease-in-out

		.logo-img
			width auto
			height 100%

	.nav
		position absolute
		top 0
		right 0

		ul
			padding 0
			margin 0

			li
				margin 20px 20px 0 0
				display inline-block
				font-size 1.4rem
				letter-spacing 0.12rem

				a
					-webkit-transition .1s color ease-in-out
					-o-transition .1s color ease-in-out
					transition .1s color ease-in-out
				
				&:last-of-type
					margin-right 0

				&:hover
					a
						color $colorscheme

				&.current-menu-item
					a
						color $colorscheme

				a, a:visited
					text-transform uppercase
					font-family $pragmatica

aside
	float left

	&.text
		width 40%
		padding 0 0 0 3%
		font-family $jenson

	&.media
		width 57%

.cta-button
	display block
	margin 100px auto 0
	max-width 450px
	padding 20px 0
	background $black
	font-family $pragmatica
	font-size 3rem
	color $white
	text-align center
	text-transform uppercase
	-webkit-transition .2s background ease-in-out
	-moz-transition .2s background ease-in-out
	-ms-transition .2s background ease-in-out
	-o-transition .2s background ease-in-out
	transition .2s background ease-in-out
	
	&:hover
		background $colorscheme

.secondary-cta
	font-size 1.4rem
	letter-spacing 0.12rem
	-webkit-transition .1s color ease-in-out
	-o-transition .1s color ease-in-out
	transition .1s color ease-in-out
	text-transform uppercase
	font-family $pragmatica
	
	&:hover
		color $colorscheme

footer
	width 100%
	padding 50px
	color white
	text-align center
	background $colorscheme

	.copyright
		font-size 1.4rem
		letter-spacing 0.12rem
		text-transform uppercase
		font-family $pragmatica

	.address
		font-family $jenson